<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/margem_padrao_cadastro"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="@dimen/tam_10dp">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ivDialogFotoAgendamentoRCR"
                android:layout_width="@dimen/tam_45dp"
                android:layout_height="@dimen/tam_45dp" />

            <TextView
                android:id="@+id/tvDialogNomeAgendamentoRCR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/tam_5dp"
                android:textColor="@color/preto"
                android:textSize="@dimen/tam_texto_18sp"
                android:textStyle="bold|italic" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/tam_10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/contato_dialog"
                android:textColor="@color/preto"
                android:textSize="@dimen/tam_texto_16sp"
                android:textStyle="italic"/>

            <ListView
                android:id="@+id/lvDialogContatoAgendamentoRCR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <TextView
            android:id="@+id/tvDialogServicoAgendamentoRCR"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/tam_10dp"
            android:gravity="center"
            android:textColor="@color/preto"
            android:textSize="@dimen/tam_texto_16sp"
            android:textStyle="italic|bold" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/tam_10dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dia"
                android:textColor="@color/preto"
                android:textSize="@dimen/tam_texto_16sp"
                />

            <TextView
                android:id="@+id/tvDialogDataAgendamentoRCR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/tam_5dp"
                android:textColor="@color/preto"
                android:textSize="@dimen/tam_texto_16sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/tam_10dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/das"
                android:textColor="@color/preto"
                android:textSize="@dimen/tam_texto_16sp"
                />

            <TextView
                android:id="@+id/tvDialogInicioHorarioAgendamentoRCR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/tam_5dp"
                android:textColor="@color/preto"
                android:textSize="@dimen/tam_texto_16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/tam_5dp"
                android:text="@string/ate_as"
                android:textColor="@color/preto"
                android:textSize="@dimen/tam_texto_16sp"
                />

            <TextView
                android:id="@+id/tvDialogHorarioFimAgendamentoRCR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/tam_5dp"
                android:textColor="@color/preto"
                android:textSize="@dimen/tam_texto_16sp"
                android:textStyle="bold" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/llDialogProfissionalEscolhidoRCR"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/tam_10dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/profissional_escolhido"
                android:textColor="@color/preto"
                android:textSize="@dimen/tam_texto_16sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/tvDialogProfissionalAgendamentoRCR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/tam_5dp"
                android:textColor="@color/preto"
                android:textSize="@dimen/tam_texto_16sp"
                android:textStyle="bold|italic" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btDialogFecharAgendamentoRCR"
            android:layout_width="@dimen/tam_padrao_button"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margem_20dp"
            android:layout_marginRight="@dimen/tam_10dp"
            android:layout_marginTop="@dimen/margem_20dp"
            android:text="@string/texto_button_fechar"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btDialogServicoRealizadoAgendamentoRCR"
            android:layout_width="@dimen/tam_padrao_button"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margem_20dp"
            android:layout_marginTop="@dimen/margem_20dp"
            android:text="@string/texto_button_realizado"
            android:textAllCaps="false" />

    </LinearLayout>
</LinearLayout>