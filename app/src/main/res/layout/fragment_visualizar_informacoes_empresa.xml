<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.FragmentVisualizarInformacoesEmpresa">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <ImageView
        android:id="@+id/ivImagemLogoVisualizarEmpresa"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tam_padrao_height_imagem_perfil_empresa"
        android:maxWidth="@dimen/tam_max_padrao_width_imagem_perfil_empresa"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/tam_10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvNomeVisualizarInfoEmpresa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/preto"
            android:textSize="@dimen/tam_padrao_nome_empresa_perfil_visualizacao"
            android:textStyle="italic|bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/tam_5dp"
            android:orientation="horizontal"
            android:weightSum="3">

            <TextView
                android:id="@+id/tvPublicoAlvoVisualizarInfoEmpresa"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_weight="1.5"
                android:textColor="@color/preto"
                android:textSize="@dimen/tam_texto_14sp" />

            <TextView
                android:id="@+id/tvCpfCnpjVisualizarInfoEmpresa"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_weight="1.5"
                android:textColor="@color/preto"
                android:textSize="@dimen/tam_texto_14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/tam_10dp"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/area_atuacao_visualizar_empresa"
                android:textColor="@color/preto"
                android:textSize="@dimen/tam_texto_16sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tvAreaAtuacaoVisualizarInfoEmpresa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/tam_5dp"
                android:textColor="@color/preto"
                android:textSize="@dimen/tam_texto_14sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llDescricaoEmpresaVisualizarPerfilEmpresa"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/sobre_nos_visualizar_empresa"
                android:textColor="@color/preto"
                android:textSize="@dimen/tam_texto_16sp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/tvDescricaoEmpresaVisualizarPerfilEmpresa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/preto"
                android:textSize="@dimen/tam_texto_14sp"
                android:textStyle="italic"
                android:gravity="center_horizontal"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/preto"
            android:textSize="@dimen/tam_texto_16sp"
            android:textStyle="italic|bold"
            android:gravity="center_horizontal"
            android:text="@string/listaContato"
            android:layout_marginTop="@dimen/tam_10dp"/>

        <faculdade.br.picuma.util.NonScrollListView
            android:id="@+id/lvListaContatoVisualizarInfoEmpresa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/tam_10dp"></faculdade.br.picuma.util.NonScrollListView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/preto"
            android:textSize="@dimen/tam_texto_16sp"
            android:textStyle="italic|bold"
            android:gravity="center_horizontal"
            android:text="@string/horario_atendimento"
            android:layout_marginTop="@dimen/tam_10dp"/>

        <faculdade.br.picuma.util.NonScrollListView
            android:id="@+id/lvListaHorarioVisualizarInfoEmpresa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/tam_10dp"></faculdade.br.picuma.util.NonScrollListView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/preto"
            android:textSize="@dimen/tam_texto_16sp"
            android:text="@string/endereco"
            android:gravity="center_horizontal"
            android:textStyle="bold|italic"
            android:layout_marginTop="@dimen/tam_10dp"/>
        />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="@dimen/tam_5dp">

            <TextView
                android:id="@+id/tvEnderecoLogradouroVisualizarInfoEmpresa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:textColor="@color/preto"
                android:textSize="@dimen/tam_texto_14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:textColor="@color/preto"
                android:textSize="@dimen/tam_texto_14sp"
                android:layout_marginLeft="@dimen/tam_10dp"
                android:layout_marginRight="@dimen/tam_10dp"/>

            <TextView
                android:id="@+id/tvEnderecoNumeroVisualizarInfoEmpresa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginLeft="@dimen/tam_5dp"
                android:textColor="@color/preto"
                android:textSize="@dimen/tam_texto_14sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/tvEnderecoComplementoVisualizarInfoEmpresa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:textColor="@color/preto"
            android:gravity="center_horizontal"
            android:textSize="0sp"/>

        <TextView
            android:id="@+id/tvEnderecoBairroVisualizarInfoEmpresa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_weight="3"
            android:textColor="@color/preto"
            android:textSize="@dimen/tam_texto_14sp"
            android:gravity="center_horizontal"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/tvEnderecoCidadeVisualizarInfoEmpresa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:textColor="@color/preto"
                android:textSize="@dimen/tam_texto_14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:textColor="@color/preto"
                android:textSize="@dimen/tam_texto_14sp"
                android:layout_marginLeft="@dimen/tam_10dp"
                android:layout_marginRight="@dimen/tam_10dp"/>

            <TextView
                android:id="@+id/tvEnderecoEstadoVisualizarInfoEmpresa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginLeft="@dimen/tam_5dp"
                android:textColor="@color/preto"
                android:textSize="@dimen/tam_texto_14sp" />
        </LinearLayout>
    </LinearLayout>

    <fragment
        android:id="@+id/fragmentMapaVisualizacaoEmpresa"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tam_fragment_mapa_visualizacao_empresa" />
</LinearLayout>
</ScrollView>