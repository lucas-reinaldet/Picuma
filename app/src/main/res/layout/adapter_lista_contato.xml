<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/tam_5dp"
        android:layout_marginTop="@dimen/tam_5dp"
        android:gravity="left"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvListaTipoContato"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/preto"
            android:textSize="@dimen/tam_texto_16sp"
            android:textStyle="italic|bold" />

        <TextView
            android:id="@+id/tvListaContato"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/tam_5dp"
            android:textColor="@color/preto"
            android:textSize="@dimen/tam_texto_14sp" />


    </LinearLayout>

</LinearLayout>