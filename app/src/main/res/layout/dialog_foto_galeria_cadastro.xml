<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margem_20dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/grupo_servico"
            android:textColor="@color/preto"
            android:textSize="@dimen/tam_texto_16sp" />

        <Spinner
            android:id="@+id/spinnerDialogGrupoServicoGaleria"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/tam_10dp"
            android:paddingLeft="@dimen/tam_10dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/tam_10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/tam_10dp"
                    android:text="@string/antes"
                    android:textColor="@color/preto"
                    android:textSize="@dimen/tam_texto_16sp" />

                <ImageButton
                    android:id="@+id/ibDialogAdicionarFotoAntesGaleria"
                    android:layout_width="150dp"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"
                    android:src="@android:drawable/ic_menu_camera" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/tam_10dp"
                    android:text="@string/depois"
                    android:textColor="@color/preto"
                    android:textSize="@dimen/tam_texto_16sp" />

                <ImageButton
                    android:id="@+id/ibDialogAdicionarFotoDepoisGaleria"
                    android:layout_width="150dp"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"
                    android:src="@android:drawable/ic_menu_camera" />

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/margem_20dp"
        android:paddingTop="@dimen/margem_20dp">

        <Button
            android:id="@+id/btDialogCancelarCadastroFotoGaleria"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margem_20dp"
            android:text="@string/texto_button_cancelar"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btDialogCadastroFotoGaleria"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margem_20dp"
            android:text="@string/texto_button_cadastrar"
            android:textAllCaps="false" />


    </LinearLayout>

</LinearLayout>