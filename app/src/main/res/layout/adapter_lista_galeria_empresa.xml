<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="@dimen/tam_5dp">

    <ImageView
        android:id="@+id/ivAdapterImagemListaGaleriaEmpresa"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_margin="@dimen/tam_5dp"
        android:scaleType="centerCrop"
        />

    <TextView
        android:id="@+id/tvAdapterGrupoServicoListaGaleriaEmpresa"
        android:layout_width="165dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        app:layout_constraintBottom_toTopOf="@+id/ivAdapterImagemListaGaleriaEmpresa"
        app:layout_constraintEnd_toStartOf="@+id/ivAdapterImagemListaGaleriaEmpresa"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/ivAdapterImagemListaGaleriaEmpresa"
        app:layout_constraintTop_toBottomOf="@+id/ivAdapterImagemListaGaleriaEmpresa"
        android:textStyle="bold"
        android:textColor="@color/preto"
        android:background="@color/branco_semi_transparente"
        />

</android.support.constraint.ConstraintLayout>