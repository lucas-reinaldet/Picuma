<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/tam_10dp"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ivAdapterLogoEmpresaFavoritos"
            android:layout_width="@dimen/tam_70dp"
            android:layout_height="@dimen/tam_70dp"
            app:civ_border_width="2dp" />


        <TextView
            android:id="@+id/tvAdapterNomeEmpresaFavoritos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/preto"
            android:textSize="@dimen/tam_texto_16sp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/tam_10dp"/>

    </LinearLayout>
</LinearLayout>