<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerPerfilEmpresa"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.AgendamentosPerfilEmpresaActivity"
    >

    <LinearLayout
        android:id="@+id/llCorpoAgendamentos"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorAccent">

            <android.support.design.widget.TabLayout
                android:id="@+id/tabLayoutAgendamentos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:tabIndicatorColor="@color/preto"
                app:tabSelectedTextColor="@color/branco"
                app:tabTextColor="@color/branco"
                ></android.support.design.widget.TabLayout>

        </android.support.design.widget.AppBarLayout>

        <include layout="@layout/content_agendamentos"></include>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>